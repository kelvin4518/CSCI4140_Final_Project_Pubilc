<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/home_taker_card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/spacing_normal"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="55dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView

            android:id="@+id/habbit_list"
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tab_layout"
            android:layout_marginTop="-2dp"
            android:orientation="horizontal"
            tools:listitem="@layout/find_habbit_list"></android.support.v7.widget.RecyclerView>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            fancy:tabIndicatorColor="@color/color_select_tab">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Afternoon" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Evening" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whole day" />
        </android.support.design.widget.TabLayout>


    </RelativeLayout>


</FrameLayout>